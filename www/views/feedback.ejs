<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Review/Feedback</title>
    <style>
      body {
        font-family: "Arial", sans-serif;
        margin: 0;
        padding: 0;
        background-color: #222;
        display: flex;
        flex-direction: column;
        align-items: center;
        color: #fff;
      }

      header {
        background-color: #333;
        color: white;
        padding: 20px;
        text-align: center;
        width: 100%;
      }

      nav {
        background-color: #555;
        padding: 10px;
        width: 100%;
        transition: color 0.3s ease;
      }

      nav a {
        color: white;
        text-decoration: none;
        padding: 10px;
        margin: 0 10px;
      }

      nav a:hover {
        color: #f77062;
      }

      .container {
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 100%;
        max-width: 600px;
        background-color: #333;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        margin-top: 20px;
      }

      .review-form {
        width: 80%;
        padding: 20px;
        box-sizing: border-box;
        background-color: #444;
        border-radius: 8px;
        margin-top: 20px;
      }

      .form-group {
        margin-bottom: 20px;
      }

      .form-group label {
        font-size: 1rem;
        font-weight: bold;
        margin-bottom: 10px;
        display: block;
      }

      .form-group select,
      .form-group textarea {
        width: 100%;
        padding: 10px;
        border: 1px solid #666;
        border-radius: 4px;
        background-color: #555;
        color: #fff;
      }

      .form-group textarea {
        resize: vertical;
      }

      .form-actions {
        display: flex;
        justify-content: flex-end;
      }

      .button {
        background-image: linear-gradient(to top, #f77062 0%, #fe5196 100%);
        padding: 10px 15px;
        border: none;
        border-radius: 4px;
        color: #fff;
        cursor: pointer;
        transition: all 0.35s;
        outline: none;
        text-decoration: none;
      }

      .button:hover {
        background: #4837ff;
        transition: all 0.3s ease;
      }
    </style>
  </head>

  <body>
    <header>
      <h1>Review/Feedback</h1>
    </header>

    <nav>
      <a href="#">Home</a>
      <a href="#">My Group</a>
      <a href="#">My Sessions</a>
      <!--Sessions/Meet-ups Dashboard-->
    </nav>

    <div class="container">
      <form class="review-form" action="/feedback" method="post">
        <div class="form-group">
          <input type="hidden" name="id" value="<%= typeof id != 'undefined' ?
          id:"99999"%>">
          <label for="member">Select Member:</label>
          <select id="member" name="member">
              <%if(typeof members != 'undefined'){%>
                  <% for(let member of members){ %>
                      <%if(id!=member.id){%>
                      <option value="<%=member.id%>">
                          <%=member.firstname+" "+member.lastname%>
                      </option>
                      <%}%>
              <%}}%>
          </select>
        </div>
        <div class="form-group">
          <label for="rating">Rating (out of 5):</label>
          <select id="rating" name="rating">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3" selected>3</option>
            <option value="4">4</option>
            <option value="5">5</option>
          </select>
        </div>
        <div class="form-group">
          <label for="feedback">Feedback:</label>
          <textarea
            id="feedback"
            name="feedback"
            rows="4"
            placeholder="Enter your feedback..."
          ></textarea>
        </div>
        <div class="form-actions">
          <button type="submit" class="button">Submit</button>
        </div>
      </form>
    </div>
  </body>
</html>
